#!/usr/bin/env bash

# ----------------------------------------------------------------------------

alias l='/bin/ls  -lFGh'
alias la='/bin/ls -aFGh'
alias ll='/bin/ls -laFGh'

which bat  >/dev/null && alias cat='bat'
which tree >/dev/null && alias tree='tree -C' && alias t='tree'

# ----------------------------------------------------------------------------

alias ..='cd ..'

cfg(){
  local CFG_HOME="$HOME/.dotfiles/main"
  [ -d "$CFG_HOME" ] || local CFG_HOME="$HOME/.config"
  [ -d "$CFG_HOME" ] && cd "$CFG_HOME/${1:-}" || return 1
}

# ----------------------------------------------------------------------------

alias mkdir='/bin/mkdir -p'

mcd(){
  mkdir "$1" && cd "$1" || return 1
}

chx(){
  if [ -x "$1" ]; then chmod -x "$1"; else chmod +x "$1"; fi
}

# TEXT EDITOR -----------------------------------------------------------------

alias e='${EDITOR:-vim}'

# GIT -------------------------------------------------------------------------

alias gss='git status >/dev/null && $EDITOR -c "Git | bd 1"'
alias gs="git status --short"
alias gl="git log --oneline --graph"
alias gb="git branch -a"
alias gch="git checkout"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gP="git pull"

# ----------------------------------------------------------------------------

which python3 >/dev/null && alias python='python3'

# SYSTEM ADMINISTRATION ------------------------------------------------------

which su          >/dev/null && alias su='/usr/bin/su -l'
which reboot      >/dev/null && alias reboot='sudo reboot'
which apt         >/dev/null && alias apt='sudo apt -y'
which apt-get     >/dev/null && alias apt-get='sudo apt-get -y'
which sysadminctl >/dev/null && alias sysadminctl='sudo sysadminctl'
which launchctl   >/dev/null && alias launchctl='sudo launchctl'
which diskuti     >/dev/null && alias diskuti='sudo diskuti'

# ----------------------------------------------------------------------------
